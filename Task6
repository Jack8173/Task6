using System;
using System.Collections.Generic;
using System.Linq;
using System.Net.NetworkInformation;
using System.Text;

namespace Task5
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int picturesInRow = 3;
            int numberPictures = 52;
            int fulledRowWithPictures;
            int remainingPictures;

            fulledRowWithPictures = numberPictures / picturesInRow;
            remainingPictures = numberPictures % picturesInRow;
            Console.WriteLine($"Всего рядов {fulledRowWithPictures}, оставшихся картинок {remainingPictures}");
            Console.ReadKey();
        }
    }
}
